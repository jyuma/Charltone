@using Charltone.UI.ViewModels.Ordering;

@model OrderingListViewModel
@{
    ViewBag.Title = "Charltone Ordering";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        position.set();
    });
</script>

<div id="ordering">
    <div class="container-fluid">
        @if (Request.IsAuthenticated)
        {
            <div class="row">
                <div class="col-sm-12">
                    <div class="pull-right">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("Create", "Ordering")'">Add</button>
                        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("EditSummary", "Ordering")'">Edit Text</button>
                    </div>
                </div>
            </div>
        }
        <!-- accordion -->
        <div class="row">
            <div class="col-sm-12">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" aria-expanded="true" href="#collapseOne">Ordering</a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <p>@Model.HeaderInfo.Summary</p>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" class="collapsed" href="#collapseTwo">Pricing</a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse">
                            <div class="panel-body">
                                <p>@Model.HeaderInfo.Pricing</p>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" class="collapsed" href="#collapseThree">Payment Policy</a>
                            </h4>
                        </div>
                        <div id="collapseThree" class="panel-collapse collapse">
                            <div class="panel-body">
                                <p>@Model.HeaderInfo.PaymentPolicy</p>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" class="collapsed" href="#collapseFour">Shipping</a>
                            </h4>
                        </div>
                        <div id="collapseFour" class="panel-collapse collapse">
                            <div class="panel-body">
                                <p>@Model.HeaderInfo.Shipping</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="linehorizontal"></div>
            </div>
        </div>
        @{
            foreach (var orderingInfo in Model.OrderingInfo)
            {
                <div class="row">
                    <div class="col-sm-2">
                        <img class="img-rounded" src=@Url.Action("GetThumbnail", "Ordering", new { id = orderingInfo.Id }) alt="" />
                    </div>
                    <div class="col-sm-2" id="label">
                        <div><p>Model:</p></div>
                        <div><p>Style:</p></div>
                        <div><p>Typical Price:</p></div>
                        <div><p>Description:</p></div>
                        @if (Request.IsAuthenticated)
                        {
                            <button class="btn btn-primary btn-xs" type="button" onclick="location.href = '@Url.Action("Edit", "Ordering", new {id = orderingInfo.Id})'">Edit</button>
                        }
                    </div>
                    <div class="col-sm-8" id="text">
                        <div><p>@orderingInfo.Model</p></div>
                        <div><p>@orderingInfo.Style</p></div>
                        <div><p>@orderingInfo.TypicalPrice</p></div>
                        <div><p>@orderingInfo.Comments</p></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="linehorizontal"></div>
                    </div>
                </div>
            }
        }
    </div>
</div>


