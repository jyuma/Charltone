@model Charltone.UI.ViewModels.Contact.ContactViewModel
@{
    ViewBag.Title = "Charltone Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    @using (Html.BeginForm())
    {
        <div id="contact">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h4>@Model.HeaderMessage</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="linehorizontal"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="pull-left">
                            <div>
                                @Html.LabelFor(model => model.ContactName, new { @class = "label label-default" })
                                @Html.TextBoxFor(model => model.ContactName, new { @class = "form-control", required = "required", @maxlength = 150 })
                            </div>
                            <div>
                                @Html.LabelFor(model => model.ContactEmail, new { @class = "label label-default" })
                                @Html.TextBoxFor(model => model.ContactEmail, new { @class = "form-control", required = "required", @maxlength = 150 })
                            </div>
                            <div>
                                @Html.LabelFor(model => model.ContactPhone, new { @class = "label label-default" })
                                @Html.TextBoxFor(model => model.ContactPhone, new { @class = "form-control", required = "required", @maxlength = 150 })
                            </div>
                            <div>
                                @Html.LabelFor(model => model.ContactMessage, new { @class = "label label-default" })
                                @Html.TextAreaFor(model => model.ContactMessage, new { @class = "form-control", required = "required", @maxlength = 1000 })
                            </div>
                            @if (Model.ContactName == null)
                            {
                                <button class="btn btn-primary btn-lg active" type="submit">Send</button>
                            }
                            else
                            {
                                <button class="btn btn-primary btn-lg disabled" type="submit">Send</button>
                            }
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="linevertical"></div>
                    </div>
                    <div class="col-md-5">
                        <div>
                            <h4>Get in touch</h4>
                        </div>
                        <div>
                            <p>You can also contact us at:</p>
                        </div>
                        <div>
                            <p>Email: kevin@charltone.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
