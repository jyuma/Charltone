@model Charltone.UI.ViewModels.Contact.ContactViewModel
@{
    ViewBag.Title = "Charltone Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="contactcontent">
    @using (Html.BeginForm())
    {
        <div id="contactmain">
            @Html.ValidationSummary(true)
            <div id="contactheader">
                @Model.HeaderMessage
            </div>
            <div class="linehorizontal" id="contact"></div>
            <div id="contactinfo">
                <div class="label label-default">
                    @Html.LabelFor(model => model.ContactName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ContactName)
                    @Html.ValidationMessageFor(model => model.ContactName)
                </div>
                <div class="label label-default">
                    @Html.LabelFor(model => model.ContactEmail)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ContactEmail)
                    @Html.ValidationMessageFor(model => model.ContactEmail)
                </div>
                <div class="label label-default">
                    @Html.LabelFor(model => model.ContactPhone)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ContactPhone)
                </div>
                <div class="label label-default">
                    @Html.LabelFor(model => model.ContactMessage)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ContactMessage)
                </div>
                <div id="contactsend">
                    @{
                        if (Model.ContactName == null)
                        {
                            <input class="btn btn-primary active" type="submit" value="Send" name="Command" />
                        }
                        else
                        {
                            <input class="btn btn-primary disabled" type="submit" value="Send" name="Command" />
                        }
}
                </div>
            </div>
            <div class="linevertical" id="contact"></div>
            <div id="getintouch">
                <div id="getintouchheader">
                    Get in touch
                </div>
                <div>
                    You can also contact us at:
                </div>
                <div id="getintouchemail">
                    Email: kevin@charltone.com
                </div>
                <!--
                <div class="getintouchaddress">
                    Address Line 1
                </div>
                <div class="getintouchaddress">
                    Address Line 2
                </div>
                <div id="getintouchcountry">
                    Canada
                </div>
                -->
            </div>
        </div>
        <div id="contactguitarimg">
        </div>
    }
</div>
