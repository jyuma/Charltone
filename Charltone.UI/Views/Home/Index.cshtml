@using Charltone.UI.ViewModels.Home;
@using Charltone.UI.Helpers;

@model HomeViewModel
@{
    ViewBag.Title = "Charltone Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        home.index.init(
        {
            maxImageWidth: parseInt(@Model.MaxImageWidth),
            maxImageHeight: parseInt(@Model.MaxImageHeight)
        });
    });
</script>

<div id="home">
    <div id="homecontent">
        <div id="homeuploadeditcontainer" class="@(Model.IsAuthenticated ? "admin" : "hidden")">
            <div id="homeupload">
                <div class="label label-primary">
                    <label>Change Picture</label>
                </div>
                <input class="form-control" id="fileupload" type="file" name="files[]" data-url="Home/Upload">
            </div>
            <div id="progressbar"></div>
            <div id="homeeditlink">
                @if (Request.IsAuthenticated)
                {
                    <button class="btn btn-primary btn-sm" type="button" onclick="location.href = '@Url.Action("Edit", "Home")'">Edit Text</button>
                }
            </div>
        </div>

        <div id="homeintroduction">
            @Model.Introduction
        </div>
        <div id="homegreeting">
            @Model.Greeting
        </div>
        <div id="homeimage">
            <img src='~/Content/images/homepage.jpg' alt='' />
        </div>
    </div>
</div> 