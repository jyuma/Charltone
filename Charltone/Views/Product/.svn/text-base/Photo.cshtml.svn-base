@using Charltone.Repositories;
@using Charltone.ViewModels.Instruments;

@model InstrumentDetailViewModel
           
@{
    ViewBag.Title = "Photo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="photo">
&nbsp
<!--<h1> @Model.Model - @Model.SubClassification</h1>-->
    <table>
        <tr>
            <th colspan = @Model.Photos.Count>
               @Model.Model
            </th>
            <th>
                Specifications
            </th>
        </tr>
        <tr>
        @foreach (var p in Model.Photos)
        {
            <td rowspan = 100>
                <img src = @Url.Action("GetPhoto", "Instrument", new { id = p.Id })
            </td>
        }
        </tr>
        @if (!@Model.Body.IsEmpty())
        {
        <tr>
            <td>Body - @Model.Body</td>
        </tr>
        }
        @if (!@Model.Neck.IsEmpty())
        {
        <tr>
            <td>Neck - @Model.Neck</td>
        </tr>
        }
        @if (!@Model.Bridge.IsEmpty())
        {
        <tr>
            <td>Bridge - @Model.Bridge</td>
        </tr>
        }
        @if (!@Model.PickGuard.IsEmpty())
        {
        <tr>
            <td>Pick Guard - @Model.PickGuard</td>
        </tr>
        }
        @if (!@Model.Pickup.IsEmpty())
        {
            <tr>
                <td>Pickup - @Model.Pickup</td>
            </tr>
        }
        
    </table>
</div>

